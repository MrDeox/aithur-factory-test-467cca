# Verification SaaS bf26 - Environment Variables

# Application Settings
DEBUG=True
APP_NAME="Verification SaaS bf26"
APP_VERSION="1.0.0"
SECRET_KEY="your-secret-key-here"

# Database Configuration (Replace with your database)
DATABASE_URL="sqlite:///./verification_saaS.db"
# For PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost/verification_saaS"

# Mercado Pago Configuration (Checkout)
MP_PUBLIC_KEY="your_mp_public_key_here"
MP_ACCESS_TOKEN="your_mp_access_token_here"
MP_CLIENT_ID="your_mp_client_id_here"
MP_CLIENT_SECRET="your_mp_client_secret_here"

# Payment Settings
MP_SUCCESS_URL="https://yourdomain.com/success"
MP_FAILURE_URL="https://yourdomain.com/failure"
MP_PENDING_URL="https://yourdomain.com/pending"

# Business Configuration
COMPANY_NAME="Verification SaaS bf26"
COMPANY_EMAIL="contato@verificationsaas.com.br"
COMPANY_PHONE="+55 11 91234-5678"
COMPANY_CNPJ="12.345.678/0001-99"

# Security Settings
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
JWT_SECRET_KEY="your-jwt-secret-key-here"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USERNAME="your-email@domain.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="Verification SaaS bf26 <noreply@verificationsaas.com.br>"

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="sa-east-1"
AWS_S3_BUCKET="verification-saas-files"

# Monitoring and Logging
LOG_LEVEL="INFO"
SENTRY_DSN="your-sentry-dsn-here"

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30

# Feature Flags
ENABLE_IOT_INTEGRATION=True
ENABLE_EMAIL_ALERTS=True
ENABLE_MOBILE_APP=True

# Development Settings
DEBUG_TOOLBAR=False
HOT_RELOAD=True

# Production Settings (uncomment for production)
# DEBUG=False
# ALLOWED_HOSTS="verificationsaas.com.br,www.verificationsaas.com.br"
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True